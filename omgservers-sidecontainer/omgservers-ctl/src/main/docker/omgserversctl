  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Tenant was found, TENANT_ID=${TENANT_ID}"
}

developer_createProject() {
  internal_useEnvironment

  TENANT_ID=$OMGSERVERSCTL_TENANT_ID

  if [ -z "${TENANT_ID}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current tenant was not found"
    exit 1
  fi

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Using tenant, TENANT_ID=$TENANT_ID"

  DEVELOPER_TOKEN=$OMGSERVERSCTL_DEVELOPER_TOKEN

  if [ -z "${DEVELOPER_TOKEN}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current developer token was not found"
    exit 1
  fi

  ENDPOINT="${OMGSERVERSCTL_ENVIRONMENT_EXTERNAL_URL}/omgservers/v1/entrypoint/developer/request/create-project"
  REQUEST="{\"tenant_id\": ${TENANT_ID}}"

  echo >> ~/.omgservers/logs
  echo $ENDPOINT >> ~/.omgservers/logs
  echo $REQUEST >> ~/.omgservers/logs

  HTTP_CODE=$(curl -s -S -X PUT -w "%{http_code}" \
    "${ENDPOINT}" \
    -H "Content-type: application/json" \
    -H "Authorization: Bearer ${DEVELOPER_TOKEN}" \
    -d "${REQUEST}" \
    -o ~/.omgservers/temp/developer-create-project_${TENANT_ID}.json)

  cat ~/.omgservers/temp/developer-create-project_${TENANT_ID}.json >> ~/.omgservers/logs
  echo >> ~/.omgservers/logs

  if [ "${HTTP_CODE}" -ge 400 ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Operation was failed, HTTP_CODE=${HTTP_CODE}, ${ENDPOINT}"
    tail -2 ~/.omgservers/logs
    exit 1
  fi

  PROJECT_ID=$(cat ~/.omgservers/temp/developer-create-project_${TENANT_ID}.json | jq -r .project_id)
  if [ -z "$PROJECT_ID" -o "$PROJECT_ID" == "null" ]; then
    echo "ERROR: PROJECT_ID was not received"
    exit 1
  fi
  echo "export OMGSERVERSCTL_PROJECT_ID=$PROJECT_ID" >> ~/.omgservers/environment

  STAGE_ID=$(cat ~/.omgservers/temp/developer-create-project_${TENANT_ID}.json | jq -r .stage_id)
  if [ -z "$STAGE_ID" -o "$STAGE_ID" == "null" ]; then
    echo "ERROR: STAGE_ID was not received"
    exit 1
  fi
  echo "export OMGSERVERSCTL_STAGE_ID=$STAGE_ID" >> ~/.omgservers/environment

  STAGE_SECRET=$(cat ~/.omgservers/temp/developer-create-project_${TENANT_ID}.json | jq -r .secret)
  if [ -z "$STAGE_SECRET" -o "$STAGE_SECRET" == "null" ]; then
    echo "ERROR: STAGE_SECRET was not received"
    exit 1
  fi
  echo "export OMGSERVERSCTL_STAGE_SECRET=$STAGE_SECRET" >> ~/.omgservers/environment

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Project was created, PROJECT_ID=$PROJECT_ID, STAGE_ID=$STAGE_ID"
}

developer_getTenantDashboard() {
  internal_useEnvironment

  TENANT_ID=$OMGSERVERSCTL_TENANT_ID

  if [ -z "${TENANT_ID}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current tenant was not found"
    exit 1
  fi

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Using tenant, TENANT_ID=$TENANT_ID"

  DEVELOPER_TOKEN=$OMGSERVERSCTL_DEVELOPER_TOKEN

  if [ -z "${DEVELOPER_TOKEN}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current developer token was not found"
    exit 1
  fi

  ENDPOINT="${OMGSERVERSCTL_ENVIRONMENT_EXTERNAL_URL}/omgservers/v1/entrypoint/developer/request/get-tenant-dashboard"
  REQUEST="{\"tenant_id\": ${TENANT_ID}}"

  echo >> ~/.omgservers/logs
  echo $ENDPOINT >> ~/.omgservers/logs
  echo $REQUEST >> ~/.omgservers/logs

  HTTP_CODE=$(curl -s -S -X PUT -w "%{http_code}" \
    "${ENDPOINT}" \
    -H "Content-type: application/json" \
    -H "Authorization: Bearer ${DEVELOPER_TOKEN}" \
    -d "${REQUEST}" \
    -o ~/.omgservers/temp/developer-get-tenant-dashboard_${TENANT_ID}.json)

  cat ~/.omgservers/temp/developer-get-tenant-dashboard_${TENANT_ID}.json >> ~/.omgservers/logs
  echo >> ~/.omgservers/logs

  if [ "${HTTP_CODE}" -ge 400 ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Operation was failed, HTTP_CODE=${HTTP_CODE}, ${ENDPOINT}"
    tail -2 ~/.omgservers/logs
    exit 1
  fi

  open ~/.omgservers/temp/developer-get-tenant-dashboard_${TENANT_ID}.json
}

developer_useProject() {
  internal_useEnvironment

  PROJECT_ID=$1

  if [ -z "${PROJECT_ID}" ]; then
    help "developer useProject"
    exit 1
  fi

  echo "export OMGSERVERSCTL_PROJECT_ID=${PROJECT_ID}" >> ~/.omgservers/environment

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Project was set, PROJECT_ID=$PROJECT_ID"
}

developer_printProject() {
  internal_useEnvironment

  PROJECT_ID=$OMGSERVERSCTL_PROJECT_ID

  if [ -z "${PROJECT_ID}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current project was not found"
    exit 1
  fi

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Project was found, PROJECT_ID=${PROJECT_ID}"
}

developer_useStage() {
  internal_useEnvironment

  STAGE_ID=$1

  if [ -z "${STAGE_ID}" ]; then
    help "developer useStage"
    exit 1
  fi

  echo "export OMGSERVERSCTL_STAGE_ID=${STAGE_ID}" >> ~/.omgservers/environment

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Stage was set, STAGE_ID=$STAGE_ID"
}

developer_printStage() {
  internal_useEnvironment

  STAGE_ID=$OMGSERVERSCTL_STAGE_ID

  if [ -z "${STAGE_ID}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current stage was not found"
    exit 1
  fi

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Stage was found, STAGE_ID=${STAGE_ID}"
}

developer_uploadVersion() {
  internal_useEnvironment

  PROJECT_PATH=$1

  if [ -z "${PROJECT_PATH}" ]; then
    help "developer uploadVersion"
    exit 1
  fi

  TENANT_ID=$OMGSERVERSCTL_TENANT_ID

  if [ -z "${TENANT_ID}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current tenant was not found"
    exit 1
  fi

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Using tenant, TENANT_ID=$TENANT_ID"

  STAGE_ID=$OMGSERVERSCTL_STAGE_ID

  if [ -z "${STAGE_ID}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current stage was not found"
    exit 1
  fi

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Using stage, STAGE_ID=$STAGE_ID"

  DEVELOPER_TOKEN=$OMGSERVERSCTL_DEVELOPER_TOKEN

  if [ -z "${DEVELOPER_TOKEN}" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Current developer token was not found"
    exit 1
  fi

  pushd ${PROJECT_PATH} >> /dev/null

  if [ ! -f "config.json" ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Version config.json was not found, PROJECT_PATH=${PROJECT_PATH}"
    exit 1
  fi

  mkdir -p .omgservers
  find . -type f -name "*.lua" | zip -@ .omgservers/project.zip

  ENDPOINT="${OMGSERVERSCTL_ENVIRONMENT_EXTERNAL_URL}/omgservers/v1/entrypoint/developer/request/upload-version"

  echo >> ~/.omgservers/logs
  echo $ENDPOINT >> ~/.omgservers/logs

  HTTP_CODE=$(curl -s -S -X PUT -w "%{http_code}" \
    "${ENDPOINT}" \
    -H "Content-type: multipart/form-data" \
    -H "Authorization: Bearer ${DEVELOPER_TOKEN}" \
    -F "tenantId=${TENANT_ID}" \
    -F "stageId=${STAGE_ID}" \
    -F "config.json=@./config.json" \
    -F "project.zip=@./.omgservers/project.zip" \
    -o ~/.omgservers/temp/developer-upload-version_${TENANT_ID}_${STAGE_ID}.json)

  cat ~/.omgservers/temp/developer-upload-version_${TENANT_ID}_${STAGE_ID}.json >> ~/.omgservers/logs
  echo >> ~/.omgservers/logs

  if [ "${HTTP_CODE}" -ge 400 ]; then
    echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) ERROR: Operation was failed, HTTP_CODE=${HTTP_CODE}, ${ENDPOINT}"
    tail -2 ~/.omgservers/logs
    exit 1
  fi

  popd >> /dev/null

  VERSION_ID=$(cat ~/.omgservers/temp/developer-upload-version_${TENANT_ID}_${STAGE_ID}.json | jq -r .id)
  if [ -z "$VERSION_ID" -o "$VERSION_ID" == "null" ]; then
    echo "ERROR: VERSION_ID was not received"
    exit 1
  fi
  echo "export OMGSERVERSCTL_VERSION_ID=$VERSION_ID" >> ~/.omgservers/environment

  echo "$(date) $(echo $OMGSERVERSCTL_ENVIRONMENT_NAME) Version was uploaded, VERSION_ID=${VERSION_ID}, TENANT_ID=${TENANT_ID}, STAGE_ID=${STAGE_ID}"
}

# INTERNAL

internal_useEnvironment() {
  source ~/.omgservers/environment

  if [ -z "${OMGSERVERSCTL_ENVIRONMENT_NAME}" ]; then
    echo "$(date) $(echo unknown) ERROR: Environment was not configured"
    help "environment useEnvironment"
    exit 1
  else
    source ~/.omgservers/environment
  fi
}

# MAIN

if [ ! -d "~/.omgservers/temp" ]; then
  mkdir -p ~/.omgservers/temp
fi
if [ ! -f "~/.omgservers/environment" ]; then
  touch ~/.omgservers/environment
fi
if [ ! -f "~/.omgservers/logs" ]; then
  touch ~/.omgservers/logs
fi

if [ -z "$1" -o "$1" = "help" ]; then
  help
  exit 0
fi

if [ -z "$1" -o "$1" = "logs" ]; then
  logs
  exit 0
fi

# Env
if [ "$1" = "environment" ]; then
  if [ "$2" = "printCurrent" ]; then
    environment_printCurrent
  elif [ "$2" = "useEnvironment" ]; then
    environment_useEnvironment $3 $4 $5
  else
    help "environment"
  fi
  exit 0
fi

# Admin
if [ "$1" = "admin" ]; then
  if [ "$2" = "useCredentials" ]; then
    admin_useCredentials $3 $4
  elif [ "$2" = "printCurrent" ]; then
    admin_printCurrent
  elif [ "$2" = "createToken" ]; then
    admin_createToken
  else
    help "admin"
  fi
# Support
elif [ "$1" = "support" ]; then
  if [ "$2" = "useCredentials" ]; then
    support_useCredentials $3 $4
  elif [ "$2" = "printCurrent" ]; then
    support_printCurrent
  elif [ "$2" = "createToken" ]; then
    support_createToken
  elif [ "$2" = "createTenant" ]; then
    support_createTenant
  elif [ "$2" = "deleteTenant" ]; then
    support_deleteTenant
  elif [ "$2" = "createDeveloper" ]; then
    support_createDeveloper $3
  else
    help "support"
  fi
# Developer
elif [ "$1" = "developer" ]; then
  if [ "$2" = "useCredentials" ]; then
    developer_useCredentials $3 $4
  elif [ "$2" = "printCurrent" ]; then
      developer_printCurrent
  elif [ "$2" = "createToken" ]; then
    developer_createToken
  elif [ "$2" = "useTenant" ]; then
    developer_useTenant $3
  elif [ "$2" = "printTenant" ]; then
      developer_printTenant
  elif [ "$2" = "createProject" ]; then
    developer_createProject
  elif [ "$2" = "useProject" ]; then
    developer_useProject $3
  elif [ "$2" = "printProject" ]; then
      developer_printProject
  elif [ "$2" = "useStage" ]; then
    developer_useStage $3
  elif [ "$2" = "printStage" ]; then
      developer_printStage
  elif [ "$2" = "getTenantDashboard" ]; then
    developer_getTenantDashboard
  elif [ "$2" = "uploadVersion" ]; then
    developer_uploadVersion $3
  else
    help "developer"
  fi
else
  help
fi
